@model IEnumerable<CapaEntidad.BuscaDocumentos_Result>

@{
    ViewBag.Title = "ResultadoBusqueda";
}

<h2 class="text-center margen-input">Resultado de tu Busqueda</h2>

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.DocumentoId)
        </th>*@
        <th>
            @*@Html.DisplayNameFor(model => model.Ano)*@
            <label>Año</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DepartamentoOrigen)*@
            <label>Depto. Origen</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DepartamentoDestino)*@
            <label>Depto. Destino</label>
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Secuencia)
        </th>*@
        <th>
            @*@Html.DisplayNameFor(model => model.NombreDocumento)*@
            <label>Nombre</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.FechaCreacionDocumento)*@
            <label>Fecha de creacion</label>
        </th>
        <th>
            <label>Utilidades</label>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.DocumentoId)
        </td>*@
        <td>
            @*@Html.DisplayFor(modelItem => item.Ano)*@
            @DateTime.Now.ToString("yyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartamentoOrigen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartamentoDestino)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Secuencia)
        </td>*@
    <td>
        @*@Html.DisplayFor(modelItem => item.NombreDocumento)*@
        @DateTime.Now.ToString("yyy") - @Html.DisplayFor(modelItem => item.DepartamentoOrigen) - @Html.DisplayFor(modelItem => item.DepartamentoDestino) - @Html.DisplayFor(modelItem => item.Secuencia)
    </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.FechaCreacionDocumento)*@
            @item.FechaCreacionDocumento.ToShortDateString()
        </td>
        <td>
            <a class="btn btn-primary btn-xs" title="Editar" href="@Url.Action("Editar", "Documento", new { id = item.DocumentoId })"><i class="fas fa-edit"></i></a>
            <a class="btn btn-success btn-xs" title="Detalles" href="@Url.Action("GetDepartamento", "Documento", new { id = item.DocumentoId })"><i class="fas fa-list-ul"></i></a>
            <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar", "Documento", new { id = item.DocumentoId })"><i class="fas fa-trash-alt"></i></a>
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Crear un empleado", "Crear", new { }, new { @class = "btn btn-primary" })
</p>
