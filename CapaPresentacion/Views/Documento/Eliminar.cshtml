@model CapaEntidad.Documento

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="margen-input">
    <a class="text-warning" style="font-size: 35px;" title="Regresar" href="@Url.Action("Index", "Documento", new {  })"><i class="fas fa-arrow-alt-circle-left"></i></a>
</div>

<h2 class=" text-danger margen-input">Eliminar</h2>

<h3>Estas seguro que seseas eliminar <label class="text-danger">"@DateTime.Now.ToString("yyy") - @Html.DisplayFor(model => model.DepartamentoOrigen) - @Html.DisplayFor(model => model.DepartamentoDestino) - @Html.DisplayFor(model => model.Secuencia)"</label>?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ano)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Ano)*@
            @DateTime.Now.ToString("yyy")
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.DepartamentoOrigen)*@
            <label>Depto. Origen</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartamentoOrigen)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.DepartamentoDestino)*@
            <label>Depto. Destino</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartamentoDestino)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.Secuencia)
            <label>Secuencia</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Secuencia)
        </dd>*@

        <dt>
            @*@Html.DisplayNameFor(model => model.NombreDocumento)*@
            <label>Nombre</label>
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.NombreDocumento)*@
            @DateTime.Now.ToString("yyy") - @Html.DisplayFor(model => model.DepartamentoOrigen) - @Html.DisplayFor(model => model.DepartamentoDestino) - @Html.DisplayFor(model => model.Secuencia)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.FechaCreacionDocumento)*@
            <label>Fecha de creacion</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaCreacionDocumento)
        </dd>

    </dl>

    @using (Html.BeginForm("Eliminar", "Documento", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    }
</div>
